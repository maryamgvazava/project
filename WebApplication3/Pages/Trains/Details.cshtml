@page "{id}"
@model WebApplication3.Pages.Trains.DetailsModel

<div class="container">
    <h2>@Model.Train?.Name Details</h2>

    <div class="row">
        <div class="col-md-6">
            <h4>Departure: @Model.Train?.From</h4>
            <p>@Model.Train?.DepartureTime</p>
        </div>
        <div class="col-md-6">
            <h4>Arrival: @Model.Train?.To</h4>
            <p>@Model.Train?.ArrivalTime</p>
        </div>
    </div>

    <h3>Carriages</h3>
    @foreach (var vagon in Model.Train?.Vagons ?? new List<Vagon>())
    {
    <div class="card mb-3">
        <div class="card-header">
            Carriage @vagon.Name
        </div>
        <div class="card-body">
            <div class="seat-map">
                @foreach (var seat in vagon.Seats)
                    {
                <button type="button"
                        class="btn btn-sm m-1 @(seat.IsOccupied ? "btn-danger disabled" : "btn-outline-success")"
                        @(seat.IsOccupied ? "disabled" : "")>
                    @seat.Number
                </button>
                    }
            </div>
        </div>
    </div>
    }
</div>