@page
@model WebApplication3.Pages.IndexModel

<div class="container">
    <h1>Search Trains</h1>
    <form method="post">
        <!-- Search form fields -->
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>

    @if (Model.SearchResults.Any())
    {
    <div class="mt-4">
        <h2>Search Results</h2>
        @foreach (var departure in Model.SearchResults)
            {
        <div class="card mb-3">
            <div class="card-body">
                <h5>@departure.Source to @departure.Destination</h5>
                <!-- Display trains -->
            </div>
        </div>
            }
    </div>
    }
</div>