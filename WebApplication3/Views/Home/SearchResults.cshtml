@model List<WebApplication3.Models.ApiModels.Train>

@foreach (var train in Model ?? new List<WebApplication3.Models.ApiModels.Train>())
{
    <div class="train-card">
        <div class="train-header">
            <span class="train-number">@train?.Number</span>
            <span class="train-name">@train?.Name</span>
        </div>
        <div class="train-details">
            <div class="departure">
                <strong>@train?.From</strong>
                @train?.DepartureTime.ToString("HH:mm")
            </div>
            <div class="arrival">
                <strong>@train?.To</strong>
                @train?.ArrivalTime.ToString("HH:mm")
            </div>
        </div>
    </div>
}