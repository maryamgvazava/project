@page

@model List<WebApplication3.Models.ApiModels.Train>
@{
    ViewData["Title"] = "Available Trains";
}

<div class="search-container">
    <h2>Find Your Train</h2>
    <form asp-controller="Home" asp-action="Search" method="post">
        <div class="row">
            <div class="col-md-3">
                <label>From</label>
                <input name="from" class="form-control" required>
            </div>
            <div class="col-md-3">
                <label>To</label>
                <input name="to" class="form-control" required>
            </div>
            <div class="col-md-3">
                <label>Date</label>
                <input type="date" name="date" class="form-control" 
                       value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-search">Search Trains</button>
            </div>
        </div>
    </form>
</div>