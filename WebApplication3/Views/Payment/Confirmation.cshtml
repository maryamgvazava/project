@page
@model Guid
@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="confirmation-container">
    <h2>🎉 Payment Successful!</h2>
    <p>Your ticket number: <strong>@Model</strong></p>

    <div class="actions">
        <a asp-controller="Ticket"
           asp-action="DownloadTicket"
           asp-route-ticketId="@Model"
           class="btn btn-download">
            Download Ticket (PDF)
        </a>
        <a asp-controller="Ticket"
           asp-action="Check"
           class="btn btn-check">
            Check Ticket Status
        </a>
    </div>
</div>