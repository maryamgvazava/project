@page
@{
    ViewData["Title"] = "Check Ticket";
}

<div class="ticket-check">
    <h2>Check Ticket Status</h2>
    <form asp-controller="Ticket" asp-action="CheckTicket" method="post">
        <div class="form-group">
            <input type="text" name="ticketId"
                   class="form-control"
                   placeholder="Enter Ticket Number" required>
        </div>
        <button type="submit" class="btn btn-check">Check Status</button>
    </form>
</div>